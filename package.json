{
  "name": "@sleekcms/client",
  "version": "0.1.4",
  "description": "Official SleekCMS content client for Node 18+ and browser",
  "type": "module",
  "main": "index.cjs",
  "module": "index.mjs",
  "types": "index.d.ts",
  "private": true,
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.mjs",
      "require": "./index.cjs"
    }
  },
  "scripts": {
    "build": "npm run clean && tsup src/index.ts --dts --format esm,cjs && cp README.md dist/ && jq '.private = false' package.json > dist/package.json",
    "clean": "rimraf dist || true",
    "test": "vitest run",
    "test:watch": "vitest",
    "publish:dist": "cd dist && npm publish"
  },
  "dependencies": {
    "jmespath": "^0.16.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sleekcms/sleekcms-client.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jmespath": "^0.15.2",
    "@vitest/ui": "^4.0.15",
    "tsup": "^8.5.1",
    "typescript": "^5.4.0",
    "vitest": "^4.0.15"
  }
}
